<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml" prefWidth="1000" prefHeight="600">
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label text="SCIENCE JOURNAL" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <left>
        <fx:include source="NavigationPanel.fxml"/>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="About the Author" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

            <!-- Author's Picture -->
            <ImageView fx:id="authorImage" fitHeight="150" fitWidth="150"/>

            <Label text="Name: ---" style="-fx-font-size: 16;"/>
            <Label text="---."
                   style="-fx-font-size: 14; -fx-wrap-text: true;"/>
            <Label text="Email: ---@email.com" style="-fx-font-size: 14;"/>
        </VBox>
    </center>
</BorderPane>
