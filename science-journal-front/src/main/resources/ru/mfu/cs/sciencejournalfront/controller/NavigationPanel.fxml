<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="10"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.mfu.cs.sciencejournalfront.controller.NavigationPanelController"
      style="-fx-background-color: #34495e; -fx-padding: 20; -fx-pref-width: 200;">
    <Button text="Search Papers" fx:id="searchPapersButton"
            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-border-width: 0;"
            onAction="#navigateToSearchPapers"/>
    <Button text="Add Paper"
            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-border-width: 0;"
            onAction="#navigateToAddPaper"/>
    <Button text="About Author"
            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-border-width: 0;"
            onAction="#navigateToAboutAuthor"/>
</VBox>